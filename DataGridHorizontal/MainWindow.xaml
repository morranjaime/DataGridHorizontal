<Window x:Class="DataGridHorizontal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGridHorizontal"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Grid>
        <local:DataGridCustom x:Name="dg"  HorizontalAlignment="Center" LoadItems="{Binding ListSymbol}" NumberColumns="20" Height="Auto" ColumnWidth="*" Width="700" SelectedCellsChanged="dg_SelectedCellsChanged" />
    </Grid>
</Window>
